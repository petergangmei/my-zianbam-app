<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:id="@+id/bar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coins Shop"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/body1"
        android:layout_below="@id/bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay1"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:id="@+id/yourZcoins"
                android:layout_marginRight="5dp"
                android:textSize="55dp"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:src="@drawable/dollar_coin_stack"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:id="@+id/lay2"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="Your Zcoins"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay2"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lay3">
            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="5 Zcoins"
                android:background="@color/bottonColor"
                android:textAllCaps="false"
                android:id="@+id/op1"
                android:layout_marginRight="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="10 Zcoins"
                android:background="@color/bottonColor"
                android:textAllCaps="false"
                android:id="@+id/op2"
                android:layout_marginRight="8dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="60 Zcoins"
                android:background="@color/bottonColor"
                android:textAllCaps="false"
                android:id="@+id/op3"
                android:layout_marginRight="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay3"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/lay4">
            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Rs. 5 "
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Rs. 10 "
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Rs. 50 "
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_marginRight="8dp"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/body1"
        android:id="@+id/body2">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/play_rewardvideo"
            android:src="@drawable/playvideo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_rewardvideo"
            android:text="Watch Video"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_below="@id/body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Earn Zcoins by watching video!"/>

</RelativeLayout>